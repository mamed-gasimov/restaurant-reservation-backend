  "main": "index.js",
  "scripts": {
    "dev": "tsc && tsc-alias -w & cross-env NODE_ENV=development nodemon -r tsconfig-paths/register ./src/app.ts",
    "migrations:dev": "cross-env NODE_ENV=development node ./migrate.js",
    "migrations:dev:up": "npm run migrations:dev -- up",
    "migrations:dev:down": "npm run migrations:dev -- down",
    "lint": "eslint './src/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "format:check": "prettier --check 'src/**/*.{ts, json}'",
    "format": "prettier --write 'src/**/*.{ts, json}'",
    "seeds": "tsc && tsc-alias -w & cross-env NODE_ENV=development nodemon -r tsconfig-paths/register ./src/seeds.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
